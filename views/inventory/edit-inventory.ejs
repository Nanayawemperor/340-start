<h1>Update Inventory Item</h1>

<!-- ERROR MESSAGES -->
<% if (errors && errors.length > 0) { %>
  <div class="error-box">
    <ul>
      <% errors.forEach(err => { %>
        <li><%= err.msg %></li>
      <% }) %>
    </ul>
  </div>
<% } %>

<form id="updateForm" action="/inv/update" method="POST">

  <label for="inv_make">Make</label>
  <input id="inv_make" name="inv_make" value="<%= itemData.inv_make || '' %>" required />

  <label for="inv_model">Model</label>
  <input id="inv_model" name="inv_model" value="<%= itemData.inv_model || '' %>" required />

  <label for="inv_description">Description</label>
  <textarea id="inv_description" name="inv_description" required><%= itemData.inv_description || '' %></textarea>

  <label for="inv_price">Price</label>
  <input type="number" id="inv_price" name="inv_price" step="0.01" value="<%= itemData.inv_price || '' %>" required />

  <label for="inv_year">Year</label>
  <input type="number" id="inv_year" name="inv_year" value="<%= itemData.inv_year || '' %>" required />

  <label for="inv_miles">Miles</label>
  <input type="number" id="inv_miles" name="inv_miles" value="<%= itemData.inv_miles || '' %>" required />

  <label for="inv_color">Color</label>
  <input type="text" id="inv_color" name="inv_color" value="<%= itemData.inv_color || '' %>" required />

  <!-- Classification Dropdown -->
  <label for="classification_id">Category</label>
  <select name="classification_id" id="classification_id" required>
    <%- classificationList %> <!-- raw HTML from controller -->
  </select>

  <!-- Hidden field for inventory ID -->
  <input type="hidden" name="inv_id" value="<%= itemData.inv_id %>" />

  <!-- Submit button -->
  <button type="submit" id="updateBtn" disabled>Update Vehicle</button>
</form>

<script src="/js/inv-update.js"></script>
