<h1>Delete Inventory Item</h1>

<!-- FLASH MESSAGES -->
<% if (messages && Object.keys(messages).length > 0) { %>
  <div class="message-box">
    <% Object.values(messages).forEach(msgArray => { %>
      <% msgArray.forEach(msg => { %>
        <p><%= msg %></p>
      <% }) %>
    <% }) %>
  </div>
<% } %>

<!-- DELETE CONFIRMATION FORM -->
<p>Confirm Deletion - This action is permanent.</p>

<form action="/inv/delete" method="POST">

  <!-- Make -->
  <label for="inv_make">Make</label>
  <input
    type="text"
    id="inv_make"
    name="inv_make"
    value="<%= itemData.inv_make %>"
    readonly
  />

  <!-- Model -->
  <label for="inv_model">Model</label>
  <input
    type="text"
    id="inv_model"
    name="inv_model"
    value="<%= itemData.inv_model %>"
    readonly
  />

  <!-- Year -->
  <label for="inv_year">Year</label>
  <input
    type="number"
    id="inv_year"
    name="inv_year"
    value="<%= itemData.inv_year %>"
    readonly
  />

  <!-- Price -->
  <label for="inv_price">Price</label>
  <input
    type="number"
    step="0.01"
    id="inv_price"
    name="inv_price"
    value="<%= itemData.inv_price %>"
    readonly
  />

  <!-- Hidden inventory ID -->
  <input type="hidden" name="inv_id" value="<%= itemData.inv_id %>" />

  <!-- Submit button -->
  <button type="submit">Delete</button>

</form>
