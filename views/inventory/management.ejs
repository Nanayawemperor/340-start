<%- include('../partials/header') %>

<main>
  <h2>Manage Inventory</h2>
  <p>Select a classification from the list to see the items belonging to that classification.</p>

  <!-- Classification Dropdown -->
  <label for="classificationList">Category</label>
  <select name="classification_id" id="classificationList" required>
    <%- classificationList %> <!-- raw HTML from controller -->
  </select>

  <!-- Inventory Table -->
  <table id="inventoryDisplay" aria-live="polite"></table>

  <!-- No JS fallback -->
  <noscript>JavaScript must be enabled to use this page.</noscript>
</main>

<!-- Client-side JS -->
<script src="/js/inventory.js"></script>
