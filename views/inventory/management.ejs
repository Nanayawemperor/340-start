<%- include('../partials/header') %>

<main>
  <h2>Manage Inventory</h2>
  <p>Select a classification from the list to see the items belonging to that classification.</p>

  <!-- Classification Dropdown List (inserted by utilities.buildClassificationList) -->
  <div id="classificationListContainer">
    <%- classificationList %>
  </div>

  <!-- Inventory Table -->
  <table id="inventoryDisplay" aria-live="polite"></table>

  <!-- No JS fallback -->
  <noscript>JavaScript must be enabled to use this page.</noscript>
</main>

<!-- Client-side JS: served from /public/js/inventory.js -->
<script src="/js/inventory.js"></script>
