

  <!-- Professional CSS styling -->
  <style>
    main {
      max-width: 500px;
      background: white;
      margin: 2rem auto;
      padding: 2rem;
      border-radius: 10px;
      box-shadow: 0 4px 10px rgba(0,0,0,0.1);
    }
    h1 {
      margin-top: 0;
      text-align: center;
      color: #003366;
    }
    form {
      margin-top: 1.5rem;
    }
    label {
      display: block;
      font-weight: bold;
      margin-bottom: .4rem;
    }
    input[type="text"],
    input[type="email"],
    input[type="password"] {
      width: 100%;
      padding: .8rem;
      margin-bottom: 1.2rem;
      border: 1px solid #ccc;
      border-radius: 5px;
      font-size: 1rem;
    }
    button {
      width: 100%;
      padding: .9rem;
      font-size: 1rem;
      background: #003366;
      color: white;
      border: none;
      border-radius: 5px;
      cursor: pointer;
    }
    button:hover {
      background: #002244;
    }
    .message {
      background: #ffe6e6;
      color: #a00000;
      padding: .8rem;
      border-radius: 5px;
      margin-bottom: 1rem;
      border: 1px solid #ffcccc;
    }
    .requirements {
      font-size: 0.9rem;
      margin-top: -0.8rem;
      margin-bottom: 1.2rem;
      color: #555;
    }
  </style>

<body>



  <main>
    <h1><%= title %></h1>

    <!-- Flash message (if present) -->
    <% if (typeof flash !== "undefined") { %>
      <div class="message">
        <%= flash %>
      </div>
    <% } %>

    <form action="/account/register" method="POST">
      
      <!-- FIRST NAME -->
      <label for="firstname">First Name</label>
      <input 
        type="text" 
        id="firstname" 
        name="account_firstname" 
        required
        value="<%= typeof locals.account_firstname !== 'undefined' ? locals.account_firstname : '' %>"
      >
      
      <!-- LAST NAME -->
      <label for="lastname">Last Name</label>
      <input 
        type="text" 
        id="lastname" 
        name="account_lastname" 
        required
        value="<%= typeof locals.account_lastname !== 'undefined' ? locals.account_lastname : '' %>"
      >

      <!-- EMAIL -->
      <label for="email">Email Address</label>
      <input 
        type="email" 
        id="email" 
        name="account_email" 
        required
        value="<%= typeof locals.account_email !== 'undefined' ? locals.account_email : '' %>"
      >

      <!-- PASSWORD -->
      <label for="password">Password</label>
      <input 
        type="password" 
        id="password" 
        name="account_password" 
        required
        minlength="12"
        pattern="(?=.*[A-Z])(?=.*[0-9])(?=.*[\W_]).{12,}"
      >
      <div class="requirements">
        <p>Password must:</p>
        <ul>
          <li>be at least <strong>12 characters</strong></li>
          <li>contain at least <strong>1 capital letter</strong></li>
          <li>contain at least <strong>1 number</strong></li>
          <li>contain at least <strong>1 special character</strong></li>
        </ul>
      </div>

      <button type="submit">Create Account</button>
    </form>

  </main>

</body>
